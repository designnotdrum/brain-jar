{
  "private": true,
  "name": "brain-jar",
  "version": "1.0.0",
  "description": "Claude Code plugins for enhanced agent memory and search",
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "bundle": "node scripts/bundle-plugins.js",
    "typecheck": "npm run typecheck --workspaces",
    "build:core": "npm run build -w @brain-jar/core",
    "build:shared-memory": "npm run build -w shared-memory-mcp",
    "build:perplexity": "npm run build -w perplexity-search-mcp",
    "build:forensics": "npm run build -w forensics-mcp",
    "build:pattern-radar": "npm run build -w pattern-radar-mcp",
    "build:visual-thinking": "npm run build -w visual-thinking-mcp"
  },
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
